{
  "env": {
    "browser": true,
    "es2021": true,
    "react-native/react-native": true
  },
  "plugins": ["react", "react-native"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "@react-native-community",
    "plugin:prettier/recommended",
    "airbnb",
    "airbnb/hooks"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "max-consecutive-empty-lines": ["error", 2]
  }
}
